{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"strict": true,
		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		"esModuleInterop": true,
    	"resolveJsonModule": true,
		"jsx": "react-jsx",
		"paths": { "@/*": ["./src/*"] },
		"types": ["rawstyle/globals"]
	},
	"include": ["**/*.ts", "**/*.tsx"]
}